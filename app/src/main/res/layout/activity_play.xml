                android:layout_width="@dimen/cellWidth"
                android:layout_height="@dimen/cellHeight"
                android:background="@color/colorOffWhite"
                android:id="@+id/cell_5"
                android:src="@color/colorOffWhite"
                />
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorBlack"
            android:paddingRight="@dimen/edgeThickness">
            <ImageView
                android:layout_width="@dimen/cellWidth"
                android:layout_height="@dimen/cellHeight"
                android:background="@color/colorOffWhite"
                android:id="@+id/cell_6"
                android:src="@color/colorOffWhite"
                />
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorBlack"
            android:paddingRight="@dimen/edgeThickness">
            <ImageView
                android:layout_width="@dimen/cellWidth"
                android:layout_height="@dimen/cellHeight"
                android:background="@color/colorOffWhite"
                android:id="@+id/cell_7"
                android:src="@color/colorOffWhite"
                />
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorBlack">
            <ImageView
                android:layout_width="@dimen/cellWidth"
                android:layout_height="@dimen/cellHeight"
                android:background="@color/colorOffWhite"
                android:id="@+id/cell_8"
                android:src="@color/colorOffWhite"
                />
        </FrameLayout>
    </GridLayout>
</RelativeLayout>