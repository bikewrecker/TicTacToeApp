<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/colorOffWhite">
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/colorOffWhite"
        android:rowCount="3"
        android:columnCount="3">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorBlack"
            android:paddingRight="@dimen/edgeThickness"
            android:paddingBottom="@dimen/edgeThickness"
            >
        <ImageView
            android:layout_width="@dimen/cellWidth"
            android:layout_height="@dimen/cellHeight"
            android:background="@color/colorOffWhite"
            android:id="@+id/cell_0"
            android:src="@color/colorOffWhite"
            />
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorBlack"
            android:paddingRight="@dimen/edgeThickness"
            android:paddingBottom="@dimen/edgeThickness">
            <ImageView
                android:layout_width="@dimen/cellWidth"
                android:layout_height="@dimen/cellHeight"
                android:background="@color/colorOffWhite"
                android:id="@+id/cell_1"
                android:src="@color/colorOffWhite"
                />
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorBlack"
            android:paddingBottom="@dimen/edgeThickness">
            <ImageView
                android:layout_width="@dimen/cellWidth"
                android:layout_height="@dimen/cellHeight"
                android:background="@color/colorOffWhite"
                android:id="@+id/cell_2"
                android:src="@color/colorOffWhite"
                />
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorBlack"
            android:paddingRight="@dimen/edgeThickness"
            android:paddingBottom="@dimen/edgeThickness">
            <ImageView
                android:layout_width="@dimen/cellWidth"
                android:layout_height="@dimen/cellHeight"
                android:background="@color/colorOffWhite"
                android:id="@+id/cell_3"
                android:src="@color/colorOffWhite"
                />
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorBlack"
            android:paddingRight="@dimen/edgeThickness"
            android:paddingBottom="@dimen/edgeThickness">
            <ImageView
                android:layout_width="@dimen/cellWidth"
                android:layout_height="@dimen/cellHeight"
                android:background="@color/colorOffWhite"
                android:id="@+id/cell_4"
                android:src="@color/colorOffWhite"
                />
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorBlack"
            android:paddingBottom="@dimen/edgeThickness">
